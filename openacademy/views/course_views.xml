<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="openacademy.list">
      <field name="name">Openacademy list</field>
      <field name="model">openacademy.course</field>
      <field name="arch" type="xml">
        <tree string="Courses List">
          <field name="title"/>
          <field name="description"/>
        </tree>
      </field>
    </record>

    <record id="openacademy_form" model="ir.ui.view">
        <field name="name">OpenAcademy Course</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <form string="Course">
                <sheet>
                    <div>
                        <label for="title" string="Title" />
                        <h1><field name="title" /></h1>
                    </div>
                    <notebook colspan="4">
                        <page string="Description">
                            <field name="description" placeholder="Course description..." />
                        </page>
                    </notebook>
                  <!--
                    <separator string="General" colspan="2" />
                    <group colspan="2" col="2">
                        <field name="description" placeholder="Course description..." />
                    </group>
                    <group>
                        <separator string="Title"/>
                        <field name="title"/>
                    </group>
                    <group>
                        <separator string="Description"/>
                        <field name="description"/>
                    </group>
                    -->
                </sheet>
            </form>
        </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="openacademy_list_courses">
      <field name="name">Openacademy</field>
      <field name="res_model">openacademy.course</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
