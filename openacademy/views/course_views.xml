<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="openacademy_course_list">
      <field name="name">Openacademy list</field>
      <field name="model">openacademy.course</field>
      <field name="arch" type="xml">
        <tree string="Courses List">
          <field name="title"/>
          <field name="description"/>
          <field name="responsible_id"/>
        </tree>
      </field>
    </record>

    <record id="openacademy_session_list" model="ir.ui.view">
      <field name="name">Sessions List</field>
      <field name="model">openacademy.session</field>
      <field name="arch" type="xml">
          <tree string="Sessions List" decoration-info="lasting_days &gt; 0 and lasting_days &lt;= 5"
                decoration-danger="lasting_days &gt; 15">
              <field name="name"/>
              <field name="start_date"/>
              <field name="duration"/>
              <field name="number_seats"/>
              <field name="instructor_id"/>
              <field name="course_id"/>
              <field name="percentage_taken_seats" widget="progressbar"/>
              <field name="lasting_days" invisible="True"/>
          </tree>
      </field>
    </record>

    <record id="openacademy_session_calendar" model="ir.ui.view">
      <field name="name">Sessions Calendar</field>
      <field name="model">openacademy.session</field>
      <field name="arch" type="xml">
          <calendar string="Sessions" date_start="start_date" date_stop="finish_date" color="course_id">
              <field name="name"/>
              <field name="instructor_id"/>
              <field name="course_id"/>
              <field name="percentage_taken_seats" widget="progressbar"/>
          </calendar>
      </field>
    </record>

    <record id="openacademy_session_gantt" model="ir.ui.view">
      <field name="name">session.gantt</field>
      <field name="model">openacademy.session</field>
      <field name="arch" type="xml">
          <gantt string="Session Gantt" date_start="start_date" date_stop="finish_date"
                 default_group_by="instructor_id">
          </gantt>
      </field>
    </record>

    <record id="openacademy_session_graph" model="ir.ui.view">
      <field name="name">session.graph</field>
      <field name="model">openacademy.session</field>
      <field name="arch" type="xml">
          <graph string="Number of attendees">
              <field name="course_id" />
              <field name="taken_seats" type="measure" />
          </graph>
      </field>
    </record>

    <record id="openacademy_session_kanban" model="ir.ui.view">
      <field name="name">Sessions Kanban</field>
      <field name="model">openacademy.session</field>
      <field name="arch" type="xml">
        <kanban class="o_kanban_mobile" sample="1" default_group_by="course_id" >
            <templates>
                <t t-name="kanban-box">
                    <div class="oe_kanban_global_click">
                        <div>
                            <strong><field name="name"/></strong>
                        </div>
                        <div>
                            <span><field name="instructor_id"/>&amp;nbsp;</span>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
      </field>
    </record>

    <record id="openacademy_course_form" model="ir.ui.view">
        <field name="name">OpenAcademy Course</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <form string="Course">
                <sheet>
                    <div>
                        <label for="title" string="Title" />
                        <h1><field name="title" /></h1>
                    </div>
                    <notebook colspan="4">
                        <page string="Description">
                            <field name="description" placeholder="Course description..." />
                            <label for="responsible_id" string="Responsible"/> <field name="responsible_id" />
                        </page>
                        <page string="Sessions">
                            <field name="session_ids" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="openacademy_session_form" model="ir.ui.view">
      <field name="name">Session</field>
      <field name="model">openacademy.session</field>
      <field name="arch" type="xml">
          <form string="">
              <sheet>
                  <group>
                      <field name="name"/>
                      <field name="is_active"/>
                      <field name="start_date"/>
                      <field name="duration"/>
                      <field name="number_seats"/>
                      <field name="instructor_id" />
                      <field name="course_id"/>
                      <field name="attendees_ids"/>
                      <field name="percentage_taken_seats" widget="progresbar"/>
                  </group>
              </sheet>
          </form>
      </field>
    </record>

    <!-- Inherit Form View to Modify it -->
    <record id="openacademy_partner_form" model="ir.ui.view">
        <field name="name">Partner</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="//page[@name='sales_purchases']" position="after">
                <page string="Instructor">
                    <group>
                        <field name="instructor"/>
                        <field name="session_ids"/>
                    </group>
                </page>
            </xpath>

        </field>
    </record>

    <record id="openacademy_course_search" model="ir.ui.view">
       <field name="name">Courses search</field>
       <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="title" />
                <field name="description" />
                <separator />
                <filter name="my_courses" string="My courses" domain="[('responsible_id', '=', uid)]" />
                <group expand="1" string="Group By">
                    <filter name="responsible_id" string="Responsible" context="{'group_by': 'responsible_id'}" />
                </group>
            </search>
       </field>
    </record>

    <!-- actions opening views on models -->
    <record id="action_openacademy_list_courses" model="ir.actions.act_window" >
        <field name="name">Courses</field>
        <field name="res_model">openacademy.course</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"search_default_my_courses":1}</field>
    </record>
    <record id="openacademy_list_sessions" model="ir.actions.act_window">
        <field name="name">Sessions</field>
        <field name="res_model">openacademy.session</field>
        <field name="view_mode">tree,calendar,graph,gantt,kanban,form</field>
    </record>
    <record id="openacademy_list_partners" model="ir.actions.act_window">
        <field name="name">Partners</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->
    <menuitem name="Open Academy" id="openacademy.menu_root" sequence="10"/>
    <!-- menu categories -->
      <!-- This Menu Item must have a parent and an action -->
      <menuitem id="openacademy_courses_action" name="Courses" parent="openacademy.menu_root"
                action="action_openacademy_list_courses" sequence="20"/>
      <menuitem id="openacademy_session_action" name="Sessions" parent="openacademy.menu_root"
                action="openacademy_list_sessions" sequence="30"/>
      <menuitem id="openacademy_partner_action" name="Partners" parent="openacademy.menu_root"
                action="openacademy_list_partners" sequence="40"/>
  </data>
</odoo>