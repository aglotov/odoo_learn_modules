<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="openacademy_course_list">
      <field name="name">Openacademy list</field>
      <field name="model">openacademy.course</field>
      <field name="arch" type="xml">
        <tree string="Courses List">
          <field name="title"/>
          <field name="description"/>
          <field name="responsible_id"/>
        </tree>
      </field>
    </record>

    <record id="openacademy_session_list" model="ir.ui.view">
      <field name="name">Sessions List</field>
      <field name="model">openacademy.session</field>
      <field name="arch" type="xml">
          <tree string="Sessions List">
              <field name="name"/>
              <field name="start_date"/>
              <field name="duration"/>
              <field name="number_seats"/>
              <field name="instructor_id"/>
              <field name="course_id"/>
              <field name="percentage_taken_seats" widget="progressbar"/>
          </tree>
      </field>
    </record>

    <record id="openacademy_course_form" model="ir.ui.view">
        <field name="name">OpenAcademy Course</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <form string="Course">
                <sheet>
                    <div>
                        <label for="title" string="Title" />
                        <h1><field name="title" /></h1>
                    </div>
                    <div>
                        <label for="session_id" string="Session" />
                        <field name="session_id" />
                    </div>
                    <notebook colspan="4">
                        <page string="Description">
                            <field name="description" placeholder="Course description..." />
                            <label for="responsible_id" string="Responsible"/> <field name="responsible_id" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="openacademy_session_form" model="ir.ui.view">
      <field name="name">Session</field>
      <field name="model">openacademy.session</field>
      <field name="arch" type="xml">
          <form string="">
              <sheet>
                  <group>
                      <field name="name"/>
                      <field name="is_active"/>
                      <field name="start_date"/>
                      <field name="duration"/>
                      <field name="number_seats"/>
                      <field name="instructor_id" />
                      <field name="course_id"/>
                      <field name="attendees_ids"/>
                      <field name="percentage_taken_seats" widget="progresbar"/>
                  </group>
              </sheet>
          </form>
      </field>
    </record>

    <!-- Inherit Form View to Modify it -->
    <record id="openacademy_partner_form" model="ir.ui.view">
        <field name="name">Partner</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="//page[@name='sales_purchases']" position="after">
                <page string="Instructor">
                    <group>
                        <field name="instructor"/>
                        <field name="session_ids"/>
                    </group>
                </page>
            </xpath>

        </field>
    </record>

    <record id="openacademy_course_search" model="ir.ui.view">
       <field name="name">Courses search</field>
       <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <search string="">
              <field name="title" />
              <field name="description" />
            </search>
       </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="openacademy_list_courses">
      <field name="name">Courses</field>
      <field name="res_model">openacademy.course</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record id="openacademy_list_sessions" model="ir.actions.act_window">
        <field name="name">Sessions</field>
        <field name="res_model">openacademy.session</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="openacademy_list_partners" model="ir.actions.act_window">
        <field name="name">Partners</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
    </record>

