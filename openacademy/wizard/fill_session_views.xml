<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="openacademy_session_fill_view_form" model="ir.ui.view">
            <field name="name">openacademy.session.fill.form</field>
            <field name="model">fill.session.wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="session_ids"/>
                            <field name="attendees_ids"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_fill_attendees" type="object" string="Submit"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_openacademy_session_fill" model="ir.actions.act_window">
            <field name="name">Session Fill Wizard</field>
            <field name="res_model">fill.session.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="model_openacademy_session"/>
        </record>

    </data>
</odoo>